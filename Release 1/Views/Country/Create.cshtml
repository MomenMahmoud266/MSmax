@model Release_1.country_bd




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



<div class="form-group">
    <label for="exampleInputCountry1">Country Name</label>
    @Html.TextBoxFor(model => model.country_Name, new { htmlAttributes = new { @class = "form-control" } })
    <label for="exampleInputCountryCode1">Country Code</label>
    @Html.TextBoxFor(model => model.country_code, new { htmlAttributes = new { @class = "form-control" } })
</div>
<div class="radio">
    <h4>Country State</h4>
    <label> @Html.RadioButtonFor(model => model.country_state, "1") Active </label>
    <label> @Html.RadioButtonFor(model => model.country_state, "0") Inactive </label>
</div>
<div class="form-group">
    <label>Description</label>
    @Html.TextAreaFor(model => model.country_desc, new
    {
        htmlAttributes =
    new { @placeholder = "Your Place Holder", @rows = "3" }
    })
</div>
<div class="form-group">
    <label>General Conditions</label>
    @Html.TextAreaFor(model => model.country_general_coditions, new
    {
        htmlAttributes =
    new { @placeholder = "Your Place Holder", @rows = "3" }
    })
</div>
    <div class="box-footer">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
}